<Window x:Class="MouseRecording.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseRecording"
        mc:Ignorable="d"
        Title="Principi programskog inženjerstva na primjeru aplikacije za praćenje računalnog miša" Height="450" Width="800"
        ResizeMode="NoResize">

    <Grid Background="#FF181818">
        <Button x:Name="navBtnNewRec" Content="New rec" HorizontalAlignment="Left" Height="93" Margin="197,0,0,0" VerticalAlignment="Center" Width="182" Click="navBtnNewRec_Click" FontSize="24" FontWeight="Bold" Background="#FF980000" BorderThickness="0,0,0,0" AutomationProperties.HelpText="Start new recording" Foreground="White"/>
        <Button x:Name="navBtnManageRecs" Content="Manage" HorizontalAlignment="Left" Height="93" Margin="421,0,0,0" VerticalAlignment="Center" Width="182" Click="navBtnManageRecs_Click" Background="#FF980000" FontSize="24" FontWeight="Bold" BorderThickness="0,0,0,0" AutomationProperties.HelpText="Manage recordings" Foreground="White"/>
        <Label x:Name="labelTest" Content="Label" HorizontalAlignment="Left" Height="44" Margin="138,60,0,0" VerticalAlignment="Top" Width="191" Foreground="White"/>
    </Grid>
</Window>
