<Window x:Class="MouseRecording.CreateNewRecordingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseRecording"
        mc:Ignorable="d"
        Title="CreateNewRecordingWindow" Height="450" Width="800">
    <Grid>
        <Label Content="NEW MOUSE RECORD" HorizontalAlignment="Left" Margin="330,60,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Height="40" Margin="0,177,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="280" VerticalContentAlignment="Center"/>
        <Button x:Name="StartRecBtn" Content="RECORD NOW!" HorizontalAlignment="Left" Height="36" Margin="305,348,0,0" VerticalAlignment="Top" Width="178" Click="StartRecBtn_Click"/>
        <Button x:Name="backBtn" Content="Back" HorizontalAlignment="Left" Height="21" Margin="30,34,0,0" VerticalAlignment="Top" Width="54" Click="backBtn_Click"/>

    </Grid>
</Window>
