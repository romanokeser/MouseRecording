<Window x:Class="MouseRecording.ActiveRecWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseRecording"
        mc:Ignorable="d"
        Title="RecordingFinalWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Your mouse movement is being recorded. Stop at any time and analyze the movement" HorizontalAlignment="Center" Margin="0,81,0,0" VerticalAlignment="Top"/>
        <Label Content="The longer you record, the heatmap quality gets higher" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Width="328"/>
        <Button x:Name="stopRecordingBtn" Content="STOP" HorizontalAlignment="Left" Height="32" Margin="308,314,0,0" VerticalAlignment="Top" Width="164" Click="stopRecordingBtn_Click"/>

    </Grid>
</Window>
