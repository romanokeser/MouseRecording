<Window x:Class="MouseRecording.ListOfRecordings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseRecording"
        mc:Ignorable="d"
        Title="ListOfRecordings" Height="450" Width="800">
    <Grid>
        <Label Content="RECORDINGS" HorizontalAlignment="Left" Margin="117,25,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="backBtn" Content="Back" HorizontalAlignment="Left" Height="21" Margin="10,32,0,0" VerticalAlignment="Top" Width="68" Click="backBtn_Click"/>
        <ListView HorizontalAlignment="Left" Height="227" Margin="117,134,0,0" VerticalAlignment="Top" Width="543" ItemsSource="{Binding Records}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
